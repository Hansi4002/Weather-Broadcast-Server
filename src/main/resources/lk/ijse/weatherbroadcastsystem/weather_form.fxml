<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500" prefWidth="700" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.weatherbroadcastsystem.controller.WeatherFormController">
   <children>
      <VBox layoutX="10" layoutY="10" prefHeight="480" prefWidth="680" spacing="12" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-padding: 15;">
         <children>
            <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Weather Broadcast System" />
            <HBox alignment="CENTER_LEFT" spacing="10">
               <children>
                  <Label style="-fx-font-weight: bold;" text="City (optional):" />
                  <TextField fx:id="txtCity" prefWidth="150" promptText="e.g., Colombo" HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnConnect" onAction="#btnConnectOnAction" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Connect" />
                  <Button fx:id="btnDisconnect" disable="true" onAction="#btnDisconnectOnAction" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Disconnect" />
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <Label fx:id="lblStatus" style="-fx-font-style: italic; -fx-text-fill: #7f8c8d;" text="Status: Disconnected" />
            <Label style="-fx-font-weight: bold;" text="Weather Updates:" />
            <TextArea fx:id="txtAreaChat" editable="false" prefHeight="300" style="-fx-font-family: 'Monospaced'; -fx-border-color: #bdc3c7;" wrapText="true" />
            <HBox alignment="CENTER_LEFT" spacing="10">
               <children>
                  <Button onAction="#btnClearOnAction" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Clear Chat" />
                  <Label style="-fx-font-style: italic; -fx-text-fill: #95a5a6;" text="(Updates arrive automatically)" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Label style="-fx-text-fill: #bdc3c7;" text="Weather Broadcast System v1.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
